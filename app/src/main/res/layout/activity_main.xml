<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#000000"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/owpbtn"
        android:layout_width="60dp"
        android:layout_height="61dp"
        android:backgroundTint="#000000"
        android:text="Oś Y"
        android:textColor="#00FF04"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.588"
        app:strokeColor="#00FF04"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/owlbtn"
        android:layout_width="60dp"
        android:layout_height="61dp"
        android:backgroundTint="#000000"
        android:text="Oś X"
        android:textColor="#00FF04"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.743"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.588"
        app:strokeColor="#00FF04"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/skalabtn"
        android:layout_width="136dp"
        android:layout_height="61dp"
        android:backgroundTint="#000000"
        android:text="Skala"
        android:textColor="#00FF04"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.698"
        app:strokeColor="#00FF04"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/przezrbtn"
        android:layout_width="136dp"
        android:layout_height="61dp"
        android:backgroundTint="#000000"
        android:text="Przezroczystość"
        android:textColor="#00FF04"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.941"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.807"
        app:strokeColor="#00FF04"
        app:strokeWidth="2dp" />

    <EditText
        android:id="@+id/tbprzezr"
        android:layout_width="136dp"
        android:layout_height="61dp"
        android:ems="10"
        android:inputType="none|number"
        android:text="Przezroczystość"
        android:textColor="#00FF04"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zdjecie"
        app:layout_constraintVertical_bias="0.695" />

    <EditText
        android:id="@+id/tbskala"
        android:layout_width="136dp"
        android:layout_height="61dp"
        android:ems="10"
        android:inputType="none|number"
        android:text="Skala"
        android:textColor="#00FF04"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zdjecie"
        app:layout_constraintVertical_bias="0.522" />

    <Button
        android:id="@+id/nzdj"
        android:layout_width="136dp"
        android:layout_height="61dp"
        android:backgroundTint="#000000"
        android:text="Następne Zdjęcie"
        android:textColor="#00FF04"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.456"
        app:strokeColor="#00FF04"
        app:strokeWidth="2dp" />

    <ImageView
        android:id="@+id/zdjecie"
        android:layout_width="209dp"
        android:layout_height="162dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.149"
        app:srcCompat="@drawable/przezr" />

    <Button
        android:id="@+id/pzdj"
        android:layout_width="136dp"
        android:layout_height="61dp"
        android:backgroundTint="#000000"
        android:text="Poprzednie zdjęcie"
        android:textColor="#00FF04"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.456"
        app:strokeColor="#00FF04"
        app:strokeWidth="2dp" />

    <EditText
        android:id="@+id/tbobrot"
        android:layout_width="136dp"
        android:layout_height="61dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:inputType="none|number"
        android:text="Ile stopni?"
        android:textColor="#00FF04"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zdjecie"
        app:layout_constraintVertical_bias="0.347" />
</androidx.constraintlayout.widget.ConstraintLayout>